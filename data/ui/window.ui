<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  
  <template class="WardriveWindow" parent="AdwApplicationWindow">
    <property name="title">GNOME Wardrive</property>
    <property name="default-width">800</property>
    <property name="default-height">600</property>
    
    <child>
      <object class="AdwToastOverlay" id="toast_overlay">
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            
            <!-- Header Bar -->
            <child>
              <object class="AdwHeaderBar" id="header_bar">
                <property name="title-widget">
                  <object class="AdwWindowTitle">
                    <property name="title">GNOME Wardrive</property>
                  </object>
                </property>
                
                <child type="start">
                  <object class="GtkButton" id="scan_button">
                    <property name="label">Start Scanning</property>
                    <property name="tooltip-text">Start or stop WiFi scanning</property>
                    <style>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
                
                <child type="end">
                  <object class="GtkMenuButton">
                    <property name="icon-name">open-menu-symbolic</property>
                    <property name="tooltip-text">Main Menu</property>
                    <property name="menu-model">primary_menu</property>
                  </object>
                </child>
                
                <child type="end">
                  <object class="GtkButton" id="export_button">
                    <property name="icon-name">document-save-symbolic</property>
                    <property name="tooltip-text">Export data</property>
                    <property name="sensitive">false</property>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- Main Content -->
            <child>
              <object class="AdwViewStack" id="main_stack">
                <property name="vexpand">true</property>
                
                <!-- Scan Page -->
                <child>
                  <object class="AdwViewStackPage" id="scan_page">
                    <property name="name">scan</property>
                    <property name="title">Networks</property>
                    <property name="icon-name">network-wireless-symbolic</property>
                    
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">12</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        
                        <!-- Status Panel -->
                        <child>
                          <object class="AdwPreferencesGroup">
                            <property name="title">Status</property>
                            
                            <child>
                              <object class="AdwActionRow">
                                <property name="title">Scan Status</property>
                                <child type="suffix">
                                  <object class="GtkLabel" id="status_label">
                                    <property name="label">Ready to scan</property>
                                    <style>
                                      <class name="dim-label"/>
                                    </style>
                                  </object>
                                </child>
                              </object>
                            </child>
                            
                            <child>
                              <object class="AdwActionRow">
                                <property name="title">Location</property>
                                <child type="suffix">
                                  <object class="GtkLabel" id="location_label">
                                    <property name="label">Unknown</property>
                                    <style>
                                      <class name="dim-label"/>
                                    </style>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                        
                        <!-- Networks List -->
                        <child>
                          <object class="AdwPreferencesGroup">
                            <property name="title">WiFi Networks</property>
                            <property name="description">Discovered networks will appear here</property>
                            <property name="vexpand">true</property>
                            
                            <child>
                              <object class="GtkScrolledWindow">
                                <property name="vexpand">true</property>
                                <property name="min-content-height">300</property>
                                
                                <child>
                                  <object class="GtkListBox" id="networks_listbox">
                                    <property name="selection-mode">none</property>
                                    <style>
                                      <class name="boxed-list"/>
                                    </style>
                                    
                                    <!-- Placeholder when empty -->
                                    <property name="placeholder">
                                      <object class="AdwStatusPage">
                                        <property name="icon-name">network-wireless-symbolic</property>
                                        <property name="title">No Networks Found</property>
                                        <property name="description">Start scanning to discover WiFi networks</property>
                                      </object>
                                    </property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                
                <!-- Statistics Page -->
                <child>
                  <object class="AdwViewStackPage">
                    <property name="name">stats</property>
                    <property name="title">Statistics</property>
                    <property name="icon-name">chart-line-symbolic</property>
                    
                    <property name="child">
                      <object class="AdwStatusPage">
                        <property name="icon-name">chart-line-symbolic</property>
                        <property name="title">Statistics</property>
                        <property name="description">Scanning statistics will be shown here</property>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- View Switcher Bar -->
            <child>
              <object class="AdwViewSwitcherBar">
                <property name="stack">main_stack</property>
                <property name="reveal">true</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
  
  <!-- Primary Menu -->
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label">Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label">Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label">About GNOME Wardrive</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>